{
	"app-id": "com.github.philip_scott.notes-up",
	"base": "io.elementary.BaseApp",
	"base-version": "juno",
	"runtime": "org.gnome.Platform",
	"sdk": "org.gnome.Sdk",
	"runtime-version": "3.30",
	"command": "com.github.philip-scott.notes-up",
	"rename-icon": "com.github.philip-scott.notes-up",
	"rename-desktop-file": "com.github.philip-scott.notes-up.desktop",
	"rename-appdata-file": "com.github.philip-scott.notes-up.appdata.xml",
	"finish-args": [
		"--filesystem=home",

		"--socket=wayland",
		"--socket=x11",

		"--own-name=com.github.philip-scott.notes-up",
		"--talk-name=org.gtk.vfs",
		"--talk-name=org.gtk.vfs.*",
		"--talk-name=org.gnome.SettingsDaemon",

		"--filesystem=xdg-run/dconf",
		"--filesystem=xdg-config/dconf:ro",
		"--talk-name=ca.desrt.dconf",
		"--env=DCONF_USER_CONFIG_DIR=.config/dconf"
	],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/share/vala",
		"/man",
		"*.a",
		"*.la"
	],
	"modules": [
		{
			"name": "gtksourceview",
			"config-opts": [
				"--disable-gtk-doc"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://download.gnome.org/sources/gtksourceview/3.24/gtksourceview-3.24.8.tar.xz",
					"sha256": "1e9bb8ff190db705deb916dd23ff681f0e8803aec407bf0fd64c7e615ac436fe"
				}
			]
		},
	    	{
		      "name": "enchant",
		      "cleanup": [
			"/include",
			"/lib/pkgconfig",
			"*.la",
			"/share"
		      ],
		      "sources": [
			{
			  "type": "archive",
			  "url": "https://github.com/AbiWord/enchant/releases/download/v2.2.3/enchant-2.2.3.tar.gz",
			  "sha256": "abd8e915675cff54c0d4da5029d95c528362266557c61c7149d53fa069b8076d"
			}
		      ]
	    	},
		{
			"name": "gtkspell",
			"sources": [
				{
					"type": "archive",
				  	"url": "https://sourceforge.net/projects/gtkspell/files/3.0.10/gtkspell3-3.0.10.tar.xz",
				  	"sha256": "b040f63836b347eb344f5542443dc254621805072f7141d49c067ecb5a375732"
				}
			]
		},
		{
			"name": "notes-up",
			"buildsystem": "cmake",
			"config-opts": ["-Dnoele:BOOL=true"],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/Philip-Scott/Notes-up/archive/1.6.1.tar.gz",
					"sha256": "f7c7d943eadb545ab8360afd94c8722e8a90105757c8dc9d467e225ff750932c"
				},
                {
                    "type": "patch",
                    "path": "elementary-theme.patch"
				}
			]
		}
	]
}
